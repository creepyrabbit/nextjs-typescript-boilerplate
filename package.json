{
  "name": "nextjs-typescript-boilerplate",
  "version": "1.0.0",
  "scripts": {
    "prebuild": "gulp && tsc && cp -R static dist/",
    "build": "next build dist",
    "predev": "gulp && tsc && cp -R static dist/",
    "dev": "concurrently \"tsc --watch\" \"next dist\"",
    "start": "next start dist",
    "tslint": "tslint --fix -c tslint.json -p tsconfig.json"
  },
  "dependencies": {
    "next": "^2.4.9",
    "react": "^15.6.1",
    "react-dom": "^15.6.1",
    "typescript": "^2.4.2"
  },
  "devDependencies": {
    "@types/next": "^2.4.2",
    "@types/node": "^8.0.19",
    "@types/react": "^16.0.0",
    "concurrently": "^3.5.0",
    "gulp": "^3.9.1",
    "tslint": "^5.5.0",
    "tslint-config-standard": "^6.0.1",
    "tslint-react": "^3.2.0"
  }
}
